extends ../layouts/auth

append config
  -pageName = 'Reset Password'
  -pageUrl = 'pages-reset-password'

block content

  .container.d-flex.flex-column
    .row.vh-100
      .col-sm-10.col-md-8.col-lg-6.mx-auto.d-table.h-100
        .d-table-cell.align-middle
          .text-center.mt-4
            h1.h2 Reset password
            p.lead
              | You forgot your password? Here you can easily retrieve a new password.
          .card.card-body
            .m-sm-4
              form
                .mb-3
                  label.form-label Email
                  input.form-control(type='email' name='email' placeholder='Enter your email')
                  
                .text-center.mt-3
                  a.btn.btn-primary(href='index.html') Reset password
                  // <button type="submit" class="btn btn-primary">Reset password</button>

